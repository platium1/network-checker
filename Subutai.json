{
    "name": "${environmentName}",
    "description": "network checker tool",
    "version": "0.0.3",
    "author": "https://github.com/absidish",
    "containers": [
        {
            "hostname": "${contName}",
            "template": "debian-stretch",
            "peer-criteria": "HTTP-GROUP",
            "size": "${containerSize}"
        }
    ],
    "peer-criteria": [
        {
            "name": "HTTP-GROUP"
        }
    ],
    "ansible-configuration": {
        "source-url": "https://github.com/platium1/network-checker/archive/master.zip",
        "ansible-playbook": "main.yml",
        "extra-vars": [],
        "groups": [
            {
                "name": "wp",
                "hostnames": [
                    "${contName}"
                ]
            }
        ]
    },
    "user-variables": {
        "environmentName": {
            "description": "Enter the environment name",
            "type": "string",
            "default": "wp",
            "validation": "[a-zA-Z0-9]+"
        },
        "domainName": {
            "description": "Enter the application domain name",
            "type": "domain",
            "default": "change.the.domain",
            "validation": "[a-zA-Z0-9]+"
        },
        "siteTitle": {
            "description": "Enter the site's title",
            "type": "string",
            "default": "title"
        },
        "adminUser": {
            "description": "Site administrator user",
            "type": "string",
            "default": "admin"
        },
        "adminPwd": {
            "description": "Site administrator password",
            "type": "string",
            "default": "admin"
        },
        "contName": {
            "description": "Enter the container's hostname",
            "type": "string",
            "default": "wp",
            "validation": "[a-zA-Z0-9]+"
        },
        "containerSize": {
            "description": "Container Size",
            "type": "enum",
            "default": "TINY",
            "validation": "TINY,SMALL,MEDIUM,LARGE,HUGE"
        }
    }
}
